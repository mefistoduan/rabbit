.pages {
    width: 100%;
    overflow: hidden;
    display: block;
    margin: 0 auto;
}
.steps {
    position: relative;
    margin-bottom: 30px;
    counter-reset: step;  /*创建步骤数字计数器*/
}
/*步骤描述*/
.steps view {
    list-style-type: none;
    font-size: 12px;
    text-align: center;
    width: 25%;
    position: relative;
    float: left;
    color:#1ABC9C ;
}

/*步骤数字*/
.steps view:before {
    display: block;
    content: ''; /*设定计数器内容*/
    /*counter-increment: step;  !*计数器值递增*!*/
    width: 32px;
    height: 32px;
    background-color: #1ABC9C;
    line-height: 32px;
    border-radius: 32px;
    font-size: 16px;
    color: #fff;
    text-align: center;
    font-weight: 700;
    margin: 0 auto 8px auto;
}

/*连接线*/
.steps view ~ view:after {
    content: '';
    width: 100%;
    height: 2px;
    background-color: #1ABC9C;
    position: absolute;
    left: -50%;
    top: 15px;
    z-index: -1; /*放置在数字后面*/
}
.steps view {
    color:#333 ;
}
.steps view.text {
    color:#1ABC9C ;
}
/*将当前/完成步骤之前的数字及连接线变绿*/
.steps view.active:before,
.steps view.active:after {
    background-color: #1ABC9C;
}

/*将当前/完成步骤之后的数字及连接线变灰*/
.steps view.active ~ view:before,
.steps view.active ~ view:after {
    background-color: #777;
}


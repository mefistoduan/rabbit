/**index.wxss**/
page {
    background: #fff;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.hearbar {
    width: 100%;
    height: 45px;
    overflow: hidden;
    display: block;
    margin: 0 auto;
}

.hearbar .sign {
    width: 10%;
    float: left;
    overflow: hidden;
}

.sign image {
    width: 30px;
    height: 30px;
    overflow: hidden;
    display: block;
    margin: 0 auto;
}

.sign view {
    width: 100%;
    overflow: hidden;
    display: block;
    margin: 0 auto;
    font-size: 12px;
    text-align: center;
}

.search {
    width: 70%;
    height: 35px;
    overflow: hidden;
    float: left;
    border: 1px solid #ccc;
    border-radius: 250px;
    margin-top: 1px;
    margin-left: 5%;
}

.search image {
    width: 30px;
    height: 30px;
    float: left;
    margin-left: 10px;
    margin-top: 5px;
}

.search input {
    width: 60%;
    height: 30px;
    line-height: 30px;
    margin-top: 2px;
    overflow: hidden;
}

.hearbar .news {
    width: 10%;
    float: right;
    overflow: hidden;
}

.news image {
    width: 30px;
    height: 30px;
    overflow: hidden;
    display: block;
    margin: 0 auto;
}

.news view {
    width: 100%;
    overflow: hidden;
    display: block;
    margin: 0 auto;
    font-size: 12px;
    text-align: center;
}

.swiper_container {
    width: 100%;
    overflow: hidden;
    display: block;
    margin: 0 auto;
    margin-top: 5px;
}

.tab_container {
    width: 100%;
    overflow: hidden;
    display: block;
    margin: 0 auto;
}

.tab_header {
    width: 100%;
    overflow: hidden;
    display: block;
    margin: 0 auto;
}

.tab_header .ul {
    width: 100%;
    overflow: hidden;
    display: block;
    margin: 0 auto;
}

.tab_header .li_4 {
    width: 25%;
    float: left;
    text-align: center;
}

.li_4 image {
    width: 30px;
    height: 30px;
    overflow: hidden;
    display: block;
    margin: 0 auto;
    margin-bottom: 5px;
}

.tab_comtainer {
    width: 100%;
    overflow: hidden;
    display: block;
    margin: 0 auto;
    border-top: 2px solid #007AFF;
    margin-top: 5px;
    padding-top: 5px;
    padding-bottom: 10px;
}

.title {
    width: 94%;
    overflow: hidden;
    display: block;
    margin: 0 auto;
    border-left: 5px solid #007AFF;
    padding-left: 5px;
    margin-top: 5px;
    margin-bottom: 5px;
}
.slide-image {
    width: 100%;
    overflow: hidden;
    display: block;
    margin: 0 auto;
}
.banner01 {
    width: 94%;
    height: 150px;
    overflow: hidden;
    display: block;
    margin: 0 auto;
    margin-top: 5px;
}

.banner01 image {
    width: 100%;
    overflow: hidden;
    display: block;
    margin: 0 auto;
}

.banner02 {
    width: 94%;
    overflow: hidden;
    display: block;
    margin: 0 auto;
    margin-top: 15px;
    margin-bottom: 15px;
}

.banner02 .banner02_lt {
    width: 48%;
    height: 100px;
    float: left;
}

.banner02 .banner02_rt {
    width: 48%;
    height: 100px;
    float: right;
}

.banner02 image {
    width: 100%;
    overflow: hidden;
    display: block;
    margin: 0 auto;
}

.scroll-header {
    display: flex;
    white-space: nowrap;
    height: 120px;
    padding-left: 4%;
    margin-top: 10px;
    margin-bottom: 10px;
    border-bottom: 2px solid #007AFF;
}

.kill_container .item {
    width: 100px;
    height: 140px;
    overflow: hidden;
    display: inline-block;
    margin-right: 10px;
    font-size: 12px;
}

.kill_container .item image {
    width: 100%;
    height: 70px;
    overflow: hidden;
    display: block;
    margin: 0 auto;
}

.kill_container .goodsname {
    width: 100%;
    overflow: hidden;
    display: block;
    margin: 0 auto;
    text-align: left;
    font-size: 12px;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.kill_container .price {
    width: 50%;
    float: left;
    color: red;
}

.kill_container .old_price {
    width: 50%;
    float: right;
    text-decoration: line-through;
}

.recomm_container {
    width: 100%;
    overflow: hidden;
    display: block;
    margin: 0 auto;
    padding-bottom: 20px;
}

.recomm_container .item {
    width: 45%;
    padding-left: 3%;
    overflow: hidden;
    float: left;
    margin-bottom: 10px;
}

.recomm_container .item:nth-child(even) {
    width: 45%;
    padding-right: 3%;
    overflow: hidden;
    float: right;
}

.recomm_container .item image {
    width: 100%;
    height: 100px;
    overflow: hidden;
    display: block;
    margin: 0 auto;
    margin-bottom: 5px;
}

.recomm_container .goodsname {
    width: 100%;
    height: 30px;
    overflow: hidden;
    display: block;
    margin: 0 auto;
    text-align: left;
    font-size: 12px;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.recomm_container .price {
    width: 50%;
    float: left;
    color: red;
    font-size: 12px;
}

.recomm_container .num {
    width: 50%;
    float: right;
    font-size: 12px;
    text-align: right;
}

.loading {
    width: 94%;
    height: 30px;
    text-align: center;
    line-height: 30px;
    overflow: hidden;
    display: block;
    margin: 0 auto;
    background-color: #ccc;
}